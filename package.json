{
  "name": "build-powershell",
  "version": "0.8.0",
  "description": "Atom Build provider for Microsoft PowerShell, runs PowerShell scripts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/idleberg/atom-build-powershell.git"
  },
  "license": "MIT",
  "keywords": [
    "powershell",
    "ps1",
    "ps",
    "linter",
    "lint"
  ],
  "main": "lib/provider.js",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "providedServices": {
    "builder": {
      "description": "Runs PowerShell scripts",
      "versions": {
        "2.0.0": "provideBuilder"
      }
    }
  },
  "package-deps": [
    "build-provider"
  ],
  "dependencies": {
    "atom-package-deps": "^4.3.1"
  },
  "devDependencies": {
    "babel-eslint": "^7.0.0",
    "coffeelint-stylish": "^0.1.2",
    "eslint": "^3.8.1",
    "eslint-config-atom-build": "^4.0.0",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-coffeelint": "^0.6.0",
    "gulp-debug": "^3.0.0",
    "gulp-jshint": "^2.0.2",
    "gulp-jsonlint": "^1.1.2",
    "gulp-lesshint": "^2.0.0",
    "jshint": "^2.9.4"
  },
  "scripts": {
    "test": "gulp lint"
  }
}
