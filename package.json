{
  "name": "build-powershell",
  "version": "0.11.0",
  "description": "Atom Build provider for Microsoft PowerShell, runs PowerShell scripts",
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/atom-build-powershell.git"
  },
  "scripts": {
    "build": "webpack --mode production",
    "dev": "webpack --mode none --watch",
    "lint": "eslint ./src",
    "test": "npm run lint"
  },
  "license": "MIT",
  "keywords": [
    "buildprovider",
    "powershell",
    "ps1",
    "ps",
    "linter"
  ],
  "main": "lib/provider.js",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },
  "activationHooks": [
    "language-powershell:grammar-used"
  ],
  "providedServices": {
    "builder": {
      "description": "Runs PowerShell scripts",
      "versions": {
        "2.0.0": "provideBuilder"
      }
    }
  },
  "package-deps": [
    "build"
  ],
  "dependencies": {
    "atom-satisfy-dependencies": "^0.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "eslint": "^6.8.0",
    "eslint-config-atom-build": "^4.0.0",
    "husky": "^4.2.1",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
